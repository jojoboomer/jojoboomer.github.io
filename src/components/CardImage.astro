---
import ButtonPrimary from "@components/ButtonPrimary.astro";

const {
  title = "Title",
  description = "Description",
  img,
  github,
  site,
} = Astro.props;
---

<article class="flex flex-col items-center rounded-lg shadow md:flex-row">
  <div class="h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg rounded-t-lg overflow-hidden">
    <img
      class="object-cover w-full h-full"
      src={img}
      alt={title}
    />
  </div>
  <div class="flex flex-col justify-between p-4 leading-normal">
    <h5
      class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white uppercase"
    >
      {title}
    </h5>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    <div class="flex gap-2">
      <ButtonPrimary
        label="Github"
        to={github}
        colors="border-primary-700 hover:bg-primary-700 text-primary-700 hover:text-white dark:border-white dark:hover:bg-white dark:text-white dark:hover:text-primary-700"
      />
      <ButtonPrimary
        label="Live"
        to={site}
        colors="border-primary-700 hover:bg-primary-700 text-primary-700 hover:text-white dark:border-white dark:hover:bg-white dark:text-white dark:hover:text-primary-700"
      />
    </div>
  </div>
</article>
