---

import BackIcon from "@icons/BackIcon.astro";
import DatabaseIcon from "@icons/DatabaseIcon.astro";
import FrontIcon from "@icons/FrontIcon.astro";
import OthersIcon from "@icons/OthersIcon.astro";
import Container from "@layouts/Container.astro";
import Stack from "./Stack.astro";
---

<Container styles="" id="about" title="Skills">
  <article class="w-full grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-5">
    <Stack
      icon={FrontIcon}
      techs={["Astro", "React", "Next.js", "Tailwind", "Styled Comps"]}
      title="Frontend development"
    />
    <Stack icon={BackIcon} techs={["Typescript", "Express.js", "PHP"]} title="Backend development" />
    <Stack
      icon={DatabaseIcon}
      techs={[ "MySql", "MongoDB"]}
      title="Databases"
    />
    <Stack icon={OthersIcon} techs={["Git", "JQuery", "Three.js", "Strapi (CMS)" ]} title="Others" />
  </article>
</Container>
