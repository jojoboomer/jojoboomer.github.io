---
import ArrowDown from '@icons/ArrowDown.astro'
import Github from '@icons/Github.astro'
import PillButton from './PillButton.astro'
import IconButton from './IconButton.astro'
import Linkedin from '@icons/Linkedin.astro'
import Link from '@icons/link.astro'
import Email from '@icons/email.astro'
import { SOCIAL } from '../../types/utils'

---

<section id="home" class="mx-auto mt-0 flex h-screen w-4/5 flex-col justify-between pt-12">
  <div class="flex h-full flex-col items-center justify-center gap-12 text-center">
    <article class="flex flex-col items-center justify-center gap-2 text-center">
      <h3 class="text-4xl font-semibold leading-head tracking-head dark:text-primary">My name is</h3>
      <h2 class="text-7xl font-semibold leading-head tracking-head text-primary dark:text-inherit">Joel Labrada</h2>
      <h3 class="text-4xl font-semibold leading-head tracking-head dark:text-primary">Front-end web developer</h3>
    </article>
    <article class="flex flex-col items-center gap-4">
      <div class="hidden w-full items-center justify-evenly gap-2 md:flex">
        <PillButton to={SOCIAL.github} display="flex">
          Github <Link w="25" h="25" fill="#fff" onHover="#000" />
        </PillButton>
        <PillButton to={SOCIAL.email} display="flex">
          Email <Link w="25" h="25" fill="#fff" />
        </PillButton>
        <PillButton to={SOCIAL.linkedin} display="flex">
          Linkedin <Link w="25" h="25" fill="#fff" onHover="#000" />
        </PillButton>
      </div>
      <div class="flex w-full items-center justify-evenly gap-2 md:hidden">
        <IconButton to={SOCIAL.github}>
          <Github w="25" h="25" fill="#fff" onHover="#000" />
        </IconButton>
        <IconButton to={SOCIAL.email}>
          <Email w="25" h="25" fill="#fff" onHover="#000" />
        </IconButton>
        <IconButton to={SOCIAL.linkedin}>
          <Linkedin w="25" h="25" fill="#fff" onHover="#000" />
        </IconButton>
      </div>
      <div class="flex w-full items-center justify-center gap-2">
        <PillButton>Resume</PillButton>
        <PillButton>Download CV</PillButton>
      </div>
    </article>
  </div>

  <article class="flex w-full items-center justify-center">
    <button class="mb-5 animate-bounce">
      <a href="#about"><ArrowDown /></a>
    </button>
  </article>
</section>

