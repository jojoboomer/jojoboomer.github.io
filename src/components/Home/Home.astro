---
import ArrowDown from "@icons/ArrowDown.astro";
import Github from "@icons/social/Github.astro";
import ButtonIcon from "@components/ButtonIcon.astro";
import Linkedin from "@icons/social/Linkedin.astro";
import Email from "@icons/social/Email.astro";
import { SOCIAL } from "../../types/utils";
import ButtonPrimary from "@components/ButtonPrimary.astro";
---

<div class="bg-primary dark:bg-transparent shadow-sm">
  <section
    id="home"
    class="mx-auto mt-0 flex h-screen w-4/5 flex-col justify-between pt-12"
  >
    <div
      class="flex flex-col md:flex-row text-center md:text-left h-full items-center justify-center font-semibold leading-head tracking-head text-inherit"
    >
      <div class="flex flex-col gap-12 flex-grow justify-center">
        <article
          class="flex flex-col items-center md:items-start justify-center text-white uppercase"
        >
          <h2 class="text-6xl">Hi</h2>
          <h2 class="text-6xl">I'm john doe</h2>
          <h2 class="text-6xl">Front-end developer</h2>
          <!-- <h3 class="text-4xl font-semibold">My name is</h3> -->
          <!-- <h2 class="text-7xl ">Joel Labrada</h2> -->
          <!-- <h3 class="text-4xl font-semibold">Front-end web developer</h3> -->
        </article>
        <article class="flex gap-8 justify-start items-center">
          <div class="justify-start gap-6 flex">
            <ButtonIcon to={SOCIAL.github}>
              <Github w="25" h="25" styles="fill-white" />
            </ButtonIcon>
            <ButtonIcon to={SOCIAL.github}>
              <Email w="25" h="25" styles="fill-white" />
            </ButtonIcon>
            <ButtonIcon to={SOCIAL.github}>
              <Linkedin w="25" h="25" styles="fill-white" />
            </ButtonIcon>
          </div>
          <div class="flex items-end gap-2 justify-center md:justify-start">
            <!-- <ButtonPrimary label='Resume' to='/Jose Joel Labrada.pdf'/> -->
            <ButtonPrimary label="Download CV" to="/Jose Joel Labrada.pdf" />
          </div>
        </article>
      </div>
      <!-- <article class="dark:bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-[#3958d61a] via-transparent to-transparent justify-center items-center mx-autos hidden md:flex">
        <React3DAnimation/>
    </article> -->
    </div>

    <div class="flex w-full items-center justify-center">
      <button class="mb-5 animate-bounce text-white">
        <a href="#about"><ArrowDown /></a>
      </button>
    </div>
  </section>
</div>
