---
const { title = "Title", description = "Description", img } = Astro.props;
---

<div class="w-full h-screen justify-center items-center flex">
  <div
    class="relative w-[300px] aspect-square overflow-hidden rounded-lg shadow-lg cursor-pointer group"
  >
    <img
      src={img}
      alt="Proyecto"
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    />
    <div
      class="absolute top-0 left-0 right-0 bottom-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex justify-center items-center text-center text-white"
    >
      <div class="px-4">
        <h3 class="text-lg font-semibold mb-2">{title}</h3>
        <p class="text-sm">{description}</p>
        <div class="flex justify-center gap-4 mt-4">
          <img
            src="https://img.icons/technologies/8.com/color/48/000000/html-5.png"
            alt="HTML"
            class="w-8 h-8"
          />
          <img
            src="https://img.icons/technologies/8.com/color/48/000000/css3.png"
            alt="CSS"
            class="w-8 h-8"
          />
          <img
            src="https://img.icons/technologies/8.com/color/48/000000/javascript.png"
            alt="JavaScript"
            class="w-8 h-8"
          />
        </div>
      </div>
    </div>
  </div>
</div>
